<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textviewtitle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textviewtitle2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="textview" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000</item>
    </style>

    <style name="img" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="data" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">bottom</item>
    </style>

    <style name="border_bottom" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">1dp</item>
        <item name="android:background">#19000000</item>
    </style>

    <style name="left" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>
</resources>
